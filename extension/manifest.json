{
  "manifest_version": 3,
  "name": "Auto Reloader",
  "version": "1.0",
  "description": "Automatically reloads a specific tab.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html", 
  "host_permissions": [
    "<all_urls>"
  ]
}
